<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="android:editTextColor">@android:color/black</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:progressBackgroundTint">@color/grey_sub_text</item>
    </style>
</resources>
