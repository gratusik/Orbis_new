<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="signUpViewModel"
            type="com.gratus.idp.viewModel.activity.SignUpViewModel"/>
    </data>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@color/app_color">
    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/diagonal_cut">
        <ImageView
            android:id="@+id/backArrowImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:padding="8dp"/>
        <ImageView
            android:id="@+id/flockImg"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/restTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flockImg"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Lets Get Started!"/>
        <RelativeLayout
            android:id="@id/editRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/restTv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/relative_layout_bg">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_logo_img"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:startIconDrawable = "@drawable/user"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:errorEnabled="@{signUpViewModel.registrationRequest.usernameChange}"
                app:errorText="@{signUpViewModel.registrationRequest.usernameError}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="Name"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:text="@={signUpViewModel.registrationRequest.username}"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:textChangedListener="@{signUpViewModel.registrationRequest.usernameTextWatcher}"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newPasswordWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameWrapper"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:startIconDrawable = "@drawable/lock"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:errorEnabled="@{signUpViewModel.registrationRequest.newPasswordChange}"
                app:errorText="@{signUpViewModel.registrationRequest.newPasswordError}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="New password"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:text="@={signUpViewModel.registrationRequest.password}"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:textChangedListener="@{signUpViewModel.registrationRequest.newPasswordTextWatcher}"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newPasswordWrapper"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:startIconDrawable = "@drawable/lock"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:errorEnabled="@{signUpViewModel.registrationRequest.confirmPasswordChange}"
                app:errorText="@{signUpViewModel.registrationRequest.confirmPasswordError}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="Confirm password"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:text="@={signUpViewModel.registrationRequest.confirmPassword}"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:textenabled="@{signUpViewModel.registrationRequest.confirmPasswordEnable}"
                    app:textChangedListener="@{signUpViewModel.registrationRequest.confirmPasswordTextWatcher}"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmPasswordWrapper"
                app:hintTextColor="@color/black"
                app:startIconDrawable = "@drawable/email"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:errorEnabled="@{signUpViewModel.registrationRequest.emailChange}"
                app:errorText="@{signUpViewModel.registrationRequest.emailError}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="Type your Email"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:text="@={signUpViewModel.registrationRequest.email}"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:textChangedListener="@{signUpViewModel.registrationRequest.emailTextWatcher}" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailWrapper"
                app:hintTextColor="@color/black"
                app:boxStrokeColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                app:startIconDrawable = "@drawable/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:errorEnabled="@{signUpViewModel.registrationRequest.phoneChange}"
                app:errorText="@{signUpViewModel.registrationRequest.phoneError}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="phone"
                    android:ems="10"
                    android:hint="Phone number"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:text="@={signUpViewModel.registrationRequest.phone}"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:textChangedListener="@{signUpViewModel.registrationRequest.phoneTextWatcher}"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlBt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/editRl"
            android:background="@drawable/circle_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:onClick="@{(v) -> signUpViewModel.hitSignUp()}"
            app:visibilityRelative = "@{signUpViewModel.registrationRequest.visibilityButton}"/>
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/resetProgressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="?android:attr/progressBarStyleLarge"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editRl"
            android:indeterminateDrawable="@drawable/progress_bar_login"
            app:visibilityProgressBar="@{signUpViewModel.registrationRequest.visibilityProgressBar}"/>
        <TextView
            android:id="@+id/loginBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editRl"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Already have an account? Login here"/>
    </RelativeLayout>
    </ScrollView>
</layout>